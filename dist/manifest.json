{
    "manifest_version": 3,
    "name": "YouTube Video Time Tracker",
    "version": "1.2",
    "description": "Tracks time watched and remaining on YouTube videos",
    "permissions": ["tabs", "storage", "scripting"],
    "host_permissions": ["*://*.youtube.com/*"],
    "background": {
      "scripts": ["src/background.js"],
      "type": "module"
    },
    "action": {
      "default_title": "YouTube Video Tracker",
      "default_popup": "index.html"
    },
    "icons": {
      "16": "icon/logo.png",
      "48": "icon/logo.png",
      "128": "icon/logo.png",
      "256": "icon/logo.png"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "youtubeTimeTracker@sloth.com"
      }
  }
}